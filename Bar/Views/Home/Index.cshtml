@{
    ViewBag.Title = "Home Page";
    Layout = "";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>

        body,html {
            height: 100%;

            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .hero-image {
            background-image: url('../../Photos/darkbar.jpg');
         
            background-color: #cccccc;
            height: 500px;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
        }

        .hero-text {
            text-align: center;
            position: absolute;
            top: 60%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #ac3973;
           
            text-shadow: 2px 2px white;
        
        }

        .button1 {
            display: inline-block;
            padding: 15px 25px;
            font-size: 24px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #f9ecf9;
            background-color: #d279d2;
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px #ac3973;
            width: 400px;
        }

            .button1:hover {
                background-color: #862d59
            }

            .button1:active {
                background-color: #862d59;
                box-shadow: 0 5px #ac3973;
                transform: translateY(4px);
            }

        .button2 {
            display: inline-block;
            padding: 15px 25px;
            font-size: 24px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #eaf0fa;
            background-color: #5a8ad8;
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px #ac3973;
            width: 400px;
        }

            .button2:hover {
                background-color: #2757a5
            }

            .button2:active {
                background-color: #2757a5;
                box-shadow: 0 5px #ac3973;
                transform: translateY(4px);
            }
    </style>
</head>
<body class="hero-image">

  
    <div class="hero-text">
        <h1 style="font-size:100px">Welcome to the Bar</h1>


        <p><button class="button1" onclick="location.href='@Url.Action("Customer", "Home")'">Customer</button></p>


        <p><button class="button2" onclick="location.href='@Url.Action("LoginB", "Home")'">Bartender</button></p>
       
    </div>



</body>
</html>



