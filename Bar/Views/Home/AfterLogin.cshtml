@model IEnumerable<Object>

    @{
        Layout = "";
        ViewBag.Title = "Customer";
        List<Bar.Customer> lsta = Model.ToList()[0] as List<Bar.Customer>;
        List<Bar.Customer> lstb = Model.ToList()[1] as List<Bar.Customer>;
     
        
    }
 

 <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>

            body, html {
                height: 100%;
                margin: 0;
                font-family: Arial, Helvetica, sans-serif;
            }
            table, th, td {
             
                padding: 10px;
            }

            .hero-image {
                background-image: url('../../Photos/darkbar.jpg');
                background-color: #cccccc;
                height: 500px;
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
                position: relative;
            }

            .hero-text {
                text-align: center;
                position: absolute;
                top: 80%;
                left: 50%;
                transform: translate(-50%, -50%);
                color: #ac3973;
                text-shadow: 2px 2px white;
            }

            .button1 {
                display: inline-block;
                padding: 15px 25px;
                font-size: 24px;
                cursor: pointer;
                text-align: center;
                text-decoration: none;
                outline: none;
                color: #f9ecf9;
                background-color: #d279d2;
                border: none;
                border-radius: 15px;
                box-shadow: 0 5px #ac3973;
                width: 400px;
            }

                .button1:hover {
                    background-color: #862d59
                }

                .button1:active {
                    background-color: #862d59;
                    box-shadow: 0 5px #ac3973;
                    transform: translateY(4px);
                }

            .button2 {
                display: inline-block;
                padding: 15px 25px;
                font-size: 24px;
                cursor: pointer;
                text-align: center;
                text-decoration: none;
                outline: none;
                color: #eaf0fa;
                background-color: #5a8ad8;
                border: none;
                border-radius: 15px;
                box-shadow: 0 5px #ac3973;
                width: 400px;
            }

                .button2:hover {
                    background-color: #2757a5
                }

                .button2:active {
                    background-color: #2757a5;
                    box-shadow: 0 5px #ac3973;
                    transform: translateY(4px);
                }
        </style>
    </head>
    <body class="hero-image">


        <div class="hero-text">
            <h1 style="font-size:100px">Orders Up!</h1>
            <table id="pretty">
                <tr style="font-size:30px">
                    <th>
                        Order Number
                    </th>
                    <th>
                        Name on Order
                    </th>
                    <th>
                        Status
                    </th>
                    <th>Update Order Status</th>
                </tr>
                @if (Model.Count() == 0)
                {
                    <tr style="font-size:30px">
                        <td colspan="4"> Records not found </td>
                    </tr>
                }
                else
                {


                    foreach (var item in lsta)
                    {

                        <tr style="font-size:30px">
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>


                            <td> @Html.ActionLink("Complete Order", "Details", new { OrderId = item.OrderID }) </td>
                        </tr>
                    }
                }




            </table>
            <h1 style="font-size:40px">Queue</h1>
            <table id="pretty">
                <tr style="font-size:30px">
                    <th>
                        Order Number
                    </th>
                    <th>
                        Name on Order
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
                @if (Model.Count() == 0)
                {
                    <tr style="font-size:30px">
                        <td colspan="4"> Records not found </td>
                    </tr>
                }
                else
                {
                    foreach (var item in lstb)
                    {
                        <tr style="font-size:30px">
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>


                            <td></td>
                        </tr>
                    }
                }

            </table>
            <p><button class="button2" style="width: 200px;" onclick="location.href='@Url.Action("/Index")'">Home Page</button></p>
        </div>



    </body>
</html>

